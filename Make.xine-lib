## Make.xine-lib

xine-lib: esound jack faad2 libcdio alsa-lib gnome-vfs gtk+ libmng libvorbis \
		libtheora libfame sdl x pkgconfig ffmpeg flac imagemagick \
		vcdimager
	FFMPEG_POSTPROC_CFLAGS="-I$(PREFIX)/include/libpostproc" \
		FFMPEG_CFLAGS="-I$(PREFIX)/include/libavcodec" \
		$(MAKE) PROG=xine-lib _gnu \
		JTL_CONFIG="$(JTL_CONFIG) --with-libflac --disable-musepack"

